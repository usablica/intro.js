{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "ES2015",
    "target": "es5",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts","src/**/*.ts","src/**/*.ts"],
  "files": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
